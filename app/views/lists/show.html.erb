<h1> <%= @list.name %> Details</h1>

<p>Bookmark</p>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.comment %></li>
  <li><%= bookmark.movie.title %></li>
  <li><%= bookmark.movie.overview %></li>
  <li><%= bookmark.movie.poster_url %></li>
  <li><%= bookmark.movie.rating %></li>
  <p><%= link_to "Delete a bookmark", bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></p>

  <% end %>
</ul>

<p><%= link_to "Add a bookmark", new_list_bookmark_path(@list) %></p>

<p><%= link_to "Return", lists_path  %></p>
